<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="0">

<!-- Sale Shop -->

        <record id="mc_dte_sale_shop_form" model="ir.ui.view">
            <field name="name">mc.dte.sale.shop.form</field>
            <field name="model">sale.shop</field>
            <field name="inherit_id" ref="sale.view_shop_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='shop']" position="after">
                    <group string="Informacion DTE">
                        <group>
                            <field name="sucursal_sii"/>
                            <field name="ruta_archivos"/>
                            <field name="dte_pruebas"/>
                        </group>
                        <group>
                            <field name="servidor_dte"/>
                            <field name="hash_tienda"/>
                            <field name="dte_permitidos"/>
                        </group>
                    </group>
                </xpath>
           </field>
        </record>

        
    </data>
</openerp>
