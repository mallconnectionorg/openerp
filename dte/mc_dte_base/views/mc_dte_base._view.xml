<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="0">

        <menuitem id="mc_dte_base_menu" name="DTE" parent="account.menu_finance" sequence="3" groups="account.group_account_manager"/>

<!-- MC DTE -->

        <record id="mc_dte_tree_view" model="ir.ui.view">
            <field name="name">mc.dte.tree</field>
            <field name="model">mc.dte</field>
            <field name="arch" type="xml">
                <tree string="tree_string">
                    <field name="name" />
                    <field name="invoice_id" />
                    <field name="codigo_sii" />
                    <field name="estado_dte" />
                    <field name="track_id" />
                </tree>
            </field>
        </record>

        <record id="mc_dte_form_view" model="ir.ui.view">
            <field name="name">mc.dte.form</field>
            <field name="model">mc.dte</field>
            <field name="arch" type="xml">
                <form string="OpenERP Version 7" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="track_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string ="Informacion">
                                <group>
                                    <field name="invoice_id" />
                                    <field name="codigo_sii" />
                                    <field name="estado_dte" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mc_dte_tree_view">
            <field name="name">DTE</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mc.dte</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
        <menuitem id="mc_dte_menu" name="DTE" sequence="10" parent="mc_dte_base_menu" action="action_mc_dte_tree_view" />

<!-- MC TIPO DTE -->

        <record id="mc_tipo_dte_tree_view" model="ir.ui.view">
            <field name="name">mc.tipo.dte.tree</field>
            <field name="model">mc.tipo.dte</field>
            <field name="arch" type="xml">
                <tree string="tree_string">
                    <field name="name" />
                    <field name="codigo_sii" />
                </tree>
            </field>
        </record>

        <record id="mc_tipo_dte_form_view" model="ir.ui.view">
            <field name="name">mc.tipo.dte.form</field>
            <field name="model">mc.tipo.dte</field>
            <field name="arch" type="xml">
                <form string="OpenERP Version 7" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="codigo_sii" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mc_tipo_dte_tree_view">
            <field name="name">Tipo DTE</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mc.tipo.dte</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
        <menuitem id="mc_tipo_dte" name="Tipo DTE" sequence="20" parent="mc_dte_base_menu" action="action_mc_tipo_dte_tree_view" />

        
    </data>
</openerp>
